<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <link rel="stylesheet" href="https://styles.relate.design/css/styles.css">
    <link rel="stylesheet" href="/styles/download.css"/>
    <title>Download</title>
</head>
<body>
<header>
    <a href="/">
        <span class="span-en292">Y2VID</span>
    </a>
</header>
<section>
    <div class="Container">
        <div class="Column">
            <h2 class="heading2-x390q">Choose your preferences</h2>
            <a class="Button">
                <form method="POST" action="http://localhost:8080/api/download">
                        <div class="submit-form">
                            <label>
                                <input type="text" id="link" placeholder="Link" name="link" value="{{link}}" readonly>
                            </label>
                            <button id="submit-btn" class="submit-btn" type="submit">Download</button>
                            <br>
                            Format:
                            <label>
                                <span style="font-weight: bold">
                                    {{type}}
                                </span>
                            </label>
                            <input type="button" id="change-button" class="change-button" onclick="history.back(); return false;" value="Change"/>

                            <div class="settings">
                                Extension:
                                <label for="formats">
                                    <select name="formats" id="formats" size="1">
                                            {{#extensions}}
                                                <option>{{.}}</option>
                                                {{/extensions}}
                                    </select>
                                </label>
                                <br>
                                Quality:
                                <label for="qualities">
                                    <select name="qualities" id="qualities" size="1">
                                            {{#qualityLabels}}
                                                <option>{{.}}</option>
                                                {{/qualityLabels}}
                                    </select>
                                </label>
                            </div>
                        </div>
                    </form>
            </a>
        </div>
        <div class="Column">
            <img src="https://relate-av4mfw.s3.us-east-2.amazonaws.com/626e8cfdd917974287576c8a/YouTube-Icon-Full-Color-Logo.wine.svg"/>
        </div>
    </div>
    <script type="text/javascript">
        const btn = document.querySelector("#submit-btn");

        btn.onclick = () => {
            btn.innerHTML = "Downloaded"
        };
    </script>
</section>
</body>
</html>